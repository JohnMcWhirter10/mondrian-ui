{
  "name": "mondrian-ui",
  "version": "0.0.0",
  "description": "A React component library with a style inspired by Piet Mondrian's neoplasticism, built with Radix UI primitives for enhanced accessibility and composability.",
  "author": "John Brea McWhirter",
  "license": "MIT",
  "main": "dist/mondrian-ui.cjs.js",
  "module": "dist/mondrian-ui.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "test": "jest",
    "test:visual": "jest src/tests/visualRegression --runInBand",
    "test:visual:update": "jest src/tests/visualRegression --runInBand --updateSnapshot",
    "storybook": "npx storybook dev -p 6006",
    "build-storybook": "npx storybook build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "audit": "npm audit fix",
    "audit:fix": "npm audit fix --force",
    "lint:mondrian": "node src/utils/mondrianLintCheck.js",
    "lint:mondrian:ci": "node src/utils/mondrianLintCheck.js --exit-with-error"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-aspect-ratio": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.3",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.11",
    "@storybook/addon-interactions": "^8.6.11",
    "@storybook/addon-links": "^8.6.11",
    "@storybook/react": "^8.6.11",
    "@storybook/react-vite": "^8.6.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "storybook": "^8.6.11",
    "ts-jest": "^29.1.1",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "vite-plugin-dts": "^4.5.3"
  },
  "resolutions": {
    "rimraf": "^4.4.0",
    "esbuild": "^0.24.3"
  },
  "overrides": {
    "lodash.isequal": "^4.5.0",
    "lodash.get": "^4.4.2"
  }
}
